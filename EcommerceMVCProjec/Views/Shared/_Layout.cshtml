            .overview-boxes .box

        {
            width: 100%;
            margin-bottom: 15px;
        }

        .sidebar.active ~ .home-section nav .profile-details {
            display: none;
        }

        }

        {
            .sidebar

        {
            width: 0;
        }

        .sidebar.active {
            width: 60px;
