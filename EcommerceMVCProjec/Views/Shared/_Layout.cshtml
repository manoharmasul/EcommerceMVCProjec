        .home-section {
            width: 100%;
            left: 0;
        }

        .sidebar.active ~ .home-section {
            left: 60px;
            width: calc(100% - 60px);
        }

        .home-section nav {
            width: 100%;
            left: 0;
        }

        .sidebar.active ~ .home-section nav {
            left: 60px;
